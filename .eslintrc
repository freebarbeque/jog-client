{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".json"
        ],
        "moduleDirectory": [
          "node_modules",
          "src"
        ]
      }
    },
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  },
  "plugins": [
    "flowtype"
  ],
  "extends": [
    "airbnb"
  ],
  "rules": {
    "react/prefer-stateless-function": "off",
    "react/jsx-filename-extension": "off",
    "react/sort-comp": [
      2,
      {
        "order": [
          "type-annotations",
          "static-methods",
          "lifecycle",
          "everything-else",
          "/^render.+$/",
          "render"
        ]
      }
    ],
    "no-use-before-define": "off",
    "semi": [
      2,
      "never"
    ],
    indent: ['error', 2, {
      SwitchCase: 1,
      VariableDeclarator: 1,
      outerIIFEBody: 1,
      MemberExpression: 1,
      FunctionDeclaration: {
        parameters: 1,
        body: 1
      },
      FunctionExpression: {
        parameters: 1,
        body: 1
      }
    }],
    "global-require": "off",
    "arrow-body-style": [0],
    "comma-dangle": [0, "never"],
    "import/no-unresolved": [0],
    "import/no-commonjs": [2],
    "no-console": [0],
    "space-before-function-paren": [2, "never"],
    "space-return-throw-case": [0],
    "object-shorthand": [0],
    "complexity": [0],
    "strict": [2, "never"],
    "max-len": [2, 180, 4],
    "arrow-parens": [2, "always"],
    "import/prefer-default-export": [0],
    "import/no-named-as-default": [0],
    "react/no-string-refs": [0],
    "no-mixed-operators": [0],
    "no-confusing-arrow": [0]
  },
  "globals": {
    "fetch": false,
    "FormData": false
  }
}