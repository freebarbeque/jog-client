extends:
  - eslint-config-airbnb
  - prettier
  - prettier/react

plugins:
  - prettier
  - flowtype

parser:
  babel-eslint

settings:
  ecmascript: 6

ecmaFeatures:
  jsx: true
  modules: true
  destructuring: true
  classes: true
  forOf: true
  blockBindings: true
  arrowFunctions: true

env:
  browser: true

globals:
  _: true
  $Keys: true
  $Subtype: true
  Iterable: true

rules:
  arrow-body-style: 0
  func-style: 0
  func-names: 0
  comma-dangle: 0
  no-console: 0
  no-param-reassign: 0
  linebreak-style: 0
  import/no-extraneous-dependencies: 0
  import/no-unresolved: 0
  import/extensions: 0
  react/jsx-filename-extension: 0
  import/prefer-default-export: 0
  import/no-named-as-default: 0
  import/no-commonjs: 2
  space-return-throw-case: 0
  object-shorthand: 0
  complexity: 0
  strict: [2, "never"]
  react/prop-types: 0
  react/prefer-stateless-function: 0
  jsx-a11y/img-has-alt: 0
  prettier/prettier: ["error", {"trailingComma": "all", "singleQuote": true, "semi": false, "printWidth": 80 }]
  global-require: 0
  react/require-default-props: 0
  react/sort-comp: ["error", {"order": ['type-annotations', 'static-methods', 'lifecycle', 'everything-else', 'render']}]
  no-underscore-dangle: 0
  no-nested-ternary: 0
  react/no-children-prop: 0
  react/forbid-prop-types: 0
  class-methods-use-this: 0
  no-use-before-define: 0
  react/no-multi-comp: 0

