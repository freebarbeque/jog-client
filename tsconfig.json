{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist/",
    "sourceMap": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "allowJs": true,
    "skipLibCheck": true,  // TODO: Remove,
    "strictNullChecks": true,
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "jog-common/*": [
        "./modules/common/src/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./modules/common/src/**/*.ts",
    "./modules/common/src/**/*.js"
  ],
  "compileOnSave": false,
  "noStrictGenericChecks": true
}
