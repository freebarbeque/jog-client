{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "allowJs": true,
    "skipLibCheck": true,  // TODO: Remove,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "downlevelIteration": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./modules/common/src/**/*.ts",
    "./modules/common/src/**/*.js"
  ],
  "exclude": [
    "./src/native",
    "./src/main.tsx",
    "./src/index.android.tsx",
    "./src/index.ios.tsx"
  ],
  "compileOnSave": false,
  "noStrictGenericChecks": true
}
