{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "artifacts",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "allowJs": false,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "paths": {
      "~/*": [
        "src/*"
      ],
      "jog-common/*": [
        "modules/common/src/*"
      ],
      // Hack: importing firebase was resolving to firebase.json, we don't want that!
      "firebase": [
        "node_modules/firebase"
      ]
    }
  },
  "filesGlob": [
    "src/native/**/*.ts",
    "src/native/**/*.tsx",
    "src/common/**/*.tsx",
    "src/common/**/*.ts"
  ],
  "types": [
    "react",
    "react-native",
    "jest"
  ],
  "exclude": [
    "android",
    "ios",
    "build",
    "node_modules"
  ],
  "compileOnSave": false
}